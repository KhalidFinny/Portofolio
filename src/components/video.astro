---
import { youtubeVideos, instagramReels } from "../videodata";
---
<section class="px-6 py-20 mt-10 bg-custom-white">
  <div class="mx-auto max-w-7xl">
    <!-- Main Header -->
    <header class="mb-16">
      <h1 class="text-6xl font-bold leading-tight font-playfair md:text-7xl text-custom-black">Video Portfolio</h1>
      <div class="my-8 w-16 h-1 bg-custom-pink"></div>
    </header>

    <!-- YouTube Videos Section -->
    <div class="mb-24">
      <div class="flex items-center mb-12">
        <div class="mr-4 w-3 h-10 rounded bg-custom-pink"></div>
        <h2 class="text-4xl font-bold font-playfair">YouTube Videos</h2>
      </div>
      
      <div 
        x-data="{ activeVideo: null }" 
        class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3"
      >
        {youtubeVideos.map((video, index) => (
          <article 
            class="overflow-hidden relative bg-white rounded-xl group project-card"
            style={`--index: ${index};`}
            x-data="{ showOverlay: false }"
          >
            <div class="rounded-xl border transition-colors duration-300 border-custom-black/10 hover:border-custom-black">
              <!-- Video Container -->
              <div class="relative pb-[56.25%] overflow-hidden rounded-t-xl">
                <iframe 
                  width="560" 
                  height="315" 
                  src={`https://www.youtube.com/embed/${video.id}?si=0fVAh3GoNAlJfDZA`}
                  title={video.title}
                  class="absolute inset-0 w-full h-full transition-transform duration-500 group-hover:scale-105"
                  frameborder="0" 
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
                  referrerpolicy="strict-origin-when-cross-origin" 
                  allowfullscreen
                ></iframe>
              </div>
              
              <!-- Card Content -->
              <div class="flex flex-col gap-4 p-6">
                <h3 class="text-2xl transition-colors duration-300 font-playfair text-custom-black group-hover:text-custom-pink">{video.title}</h3>
                <div class="flex items-center mt-2">
                  <div class="overflow-hidden mr-2 w-6 h-6 rounded-full">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="red" class="w-6 h-6">
                      <path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 4-8 4z"/>
                    </svg>
                  </div>
                  <span class="text-sm font-montserrat text-custom-black/70">YouTube</span>
                </div>
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>

    <!-- Instagram Reels Section -->
    <div class="mt-16">
      <div class="flex items-center mb-12">
        <div class="mr-4 w-3 h-10 rounded bg-custom-gold"></div>
        <h2 class="text-4xl font-bold font-playfair">Instagram Reels</h2>
      </div>
      
      <div 
        x-data="{ activeVideo: null }" 
        class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3"
      >
        {instagramReels.map((reel, index) => (
          <article 
            class="overflow-hidden relative bg-white rounded-xl group project-card"
            style={`--index: ${index + youtubeVideos.length};`}
            x-data="{ showOverlay: false }"
          >
            <div class="rounded-xl border transition-colors duration-300 border-custom-black/10 hover:border-custom-black">
              <!-- IG Embed Container -->
              <div class="relative pb-[125%] overflow-hidden rounded-t-xl bg-gray-50">
                <div class="flex absolute inset-0 justify-center items-center w-full h-full">
                  <blockquote 
                    class="w-full h-full instagram-media" 
                    data-instgrm-captioned 
                    data-instgrm-permalink={`https://www.instagram.com/reel/${reel.id}/?utm_source=ig_embed&amp;utm_campaign=loading`} 
                    data-instgrm-version="14" 
                    style="background:#FFF; border:0; border-radius:8px; box-shadow:none; margin: 0; width:100%; height:100%;"
                  >
                    <!-- Instagram embed content -->
                  </blockquote>
                </div>
              </div>
              
              <!-- Card Content -->
              <div class="flex flex-col gap-4 p-6">
                <h3 class="text-2xl transition-colors duration-300 font-playfair text-custom-black group-hover:text-custom-pink">{reel.title}</h3>
                <div class="flex items-center mt-2">
                  <div class="overflow-hidden p-1 mr-2 w-6 h-6 bg-gradient-to-tr from-purple-600 to-pink-500 rounded-full">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" fill="white" class="w-4 h-4">
                      <path d="M224.1 141c-63.6 0-114.9 51.3-114.9 114.9s51.3 114.9 114.9 114.9S339 319.5 339 255.9 287.7 141 224.1 141zm0 189.6c-41.1 0-74.7-33.5-74.7-74.7s33.5-74.7 74.7-74.7 74.7 33.5 74.7 74.7-33.6 74.7-74.7 74.7zm146.4-194.3c0 14.9-12 26.8-26.8 26.8-14.9 0-26.8-12-26.8-26.8s12-26.8 26.8-26.8 26.8 12 26.8 26.8zm76.1 27.2c-1.7-35.9-9.9-67.7-36.2-93.9-26.2-26.2-58-34.4-93.9-36.2-37-2.1-147.9-2.1-184.9 0-35.8 1.7-67.6 9.9-93.9 36.1s-34.4 58-36.2 93.9c-2.1 37-2.1 147.9 0 184.9 1.7 35.9 9.9 67.7 36.2 93.9s58 34.4 93.9 36.2c37 2.1 147.9 2.1 184.9 0 35.9-1.7 67.7-9.9 93.9-36.2 26.2-26.2 34.4-58 36.2-93.9 2.1-37 2.1-147.8 0-184.8zM398.8 388c-7.8 19.6-22.9 34.7-42.6 42.6-29.5 11.7-99.5 9-132.1 9s-102.7 2.6-132.1-9c-19.6-7.8-34.7-22.9-42.6-42.6-11.7-29.5-9-99.5-9-132.1s-2.6-102.7 9-132.1c7.8-19.6 22.9-34.7 42.6-42.6 29.5-11.7 99.5-9 132.1-9s102.7-2.6 132.1 9c19.6 7.8 34.7 22.9 42.6 42.6 11.7 29.5 9 99.5 9 132.1s2.7 102.7-9 132.1z"/>
                    </svg>
                  </div>
                  <span class="text-sm font-montserrat text-custom-black/70">Instagram</span>
                </div>
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </div>
</section>

<script async src="//www.instagram.com/embed.js"></script>

<style>
  /* Staggered animation for cards */
  .project-card {
    animation: fadeIn 0.5s ease-in-out forwards;
    animation-delay: calc(var(--index) * 0.1s);
    opacity: 0;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    transition: all 0.3s ease;
  }
  
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  /* Enhanced hover effect */
  .project-card:hover {
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    transform: translateY(-4px);
  }
  
  /* Custom border on hover */
  .project-card:hover .border {
    border-color: theme('colors.custom-pink');
    border-width: 1px;
  }
  
  /* Instagram embed container styles */
  .instagram-media {
    min-width: 100% !important;
    width: 100% !important;
    min-height: 100% !important;
    height: 100% !important;
  }
</style>