---
import "../styles/global.css";
const { selectedTeam, teamColors } = Astro.props;
---

<script src="//unpkg.com/alpinejs" defer></script>

<!-- About Me Section -->
<section id="aboutme"
  class="w-full h-screen flex-shrink-0 px-8 md:px-16 lg:px-32 flex flex-col items-center justify-center relative"
  :style="selectedTeam ? `background-color: ${teamColors[selectedTeam].base};` : 'background-color: var(--custom-white);'"
>
  <!-- About Me Content -->
  <div class="w-full max-w-6xl mx-auto text-center">
    <!-- Title Group -->
    <div class="mb-16">
      <h1
        class="text-6xl md:text-7xl lg:text-8xl font-bold mb-6 opacity-0 translate-y-8 animate-initial transition-all duration-1000 hover:scale-105 hover:opacity-90"
        :style="selectedTeam ? `color: ${teamColors[selectedTeam].accent};` : 'color: var(--custom-black);'"
      >
        HELLO XPLORERS!
      </h1>

      <h2
        class="text-2xl md:text-3xl lg:text-4xl font-medium mb-8 opacity-0 translate-y-8 animate-initial transition-all duration-1000 hover:scale-105 hover:opacity-90 font-montserrat"
        :style="selectedTeam ? `color: ${teamColors[selectedTeam].accent};` : 'color: var(--custom-black);'"
      >
        My name is Muhammad Khalid Atthoriq
      </h2>

      <p
        class="text-lg md:text-xl lg:text-2xl max-w-3xl mx-auto leading-relaxed opacity-0 translate-y-8 animate-initial transition-all duration-1000 hover:scale-105 hover:opacity-90 font-montserrat"
        :style="selectedTeam ? `color: ${teamColors[selectedTeam].accent};` : 'color: var(--custom-black);'"
      >
        I'm a passionate creator with expertise in front-end development,
        design, and multimedia. I love bringing ideas to life through code
        and creativity.
      </p>
    </div>

    <!-- Icons Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-8 font-montserrat">
      <!-- CV Card -->
      <button class="group opacity-0 translate-y-8 animate-initial transition-all duration-1000 delay-300">
        <div class="flex flex-col items-center space-y-6">
          <div
            class="w-32 h-32 md:w-36 md:h-36 rounded-full flex items-center justify-center transform transition-all duration-300 group-hover:scale-105 group-hover:shadow-lg"
            :style="selectedTeam ? `background-color: ${teamColors[selectedTeam].accent};` : 'background-color: var(--custom-pink);'"
          >
            <svg
              class="w-16 h-16"
              :style="selectedTeam ? `color: ${teamColors[selectedTeam].base};` : 'color: var(--custom-black);'"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
              ></path>
            </svg>
          </div>
          <span
            class="text-xl font-semibold transition-all duration-300 group-hover:scale-105 font-montserrat"
            :style="selectedTeam ? `color: ${teamColors[selectedTeam].accent};` : 'color: var(--custom-black);'"
            >My CV</span
          >
        </div>
      </button>

      <!-- Contact Card -->
      <button class="group opacity-0 translate-y-8 animate-initial transition-all duration-1000 delay-300">
        <div class="flex flex-col items-center space-y-6">
          <div
            class="w-32 h-32 md:w-36 md:h-36 rounded-full flex items-center justify-center transform transition-all duration-300 group-hover:scale-105 group-hover:shadow-lg"
            :style="selectedTeam ? `background-color: ${teamColors[selectedTeam].accent};` : 'background-color: var(--custom-pink);'"
          >
            <svg
              class="w-16 h-16"
              :style="selectedTeam ? `color: ${teamColors[selectedTeam].base};` : 'color: var(--custom-black);'"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"
              ></path>
            </svg>
          </div>
          <span
            class="text-xl font-semibold transition-all duration-300 group-hover:scale-105 font-montserrat"
            :style="selectedTeam ? `color: ${teamColors[selectedTeam].accent};` : 'color: var(--custom-black);'"
            >Contact Me</span
          >
        </div>
      </button>
    </div>
  </div>
</section>

<!-- Intersection Observer Script -->
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('animate-in');
          observer.unobserve(entry.target);
        }
      });
    }, { threshold: 0.1 });

    document.querySelectorAll('.animate-initial').forEach(observer.observe.bind(observer));
  });
</script>

<style>
  /* Animation Classes */
  .animate-initial {
    opacity: 0;
    transform: translateY(20px);
  }

  .animate-in {
    opacity: 1 !important;
    transform: translateY(0) !important;
  }

  /* Hover Animations for Title and Text */
  h1, h2, p {
    transition: transform 0.3s ease, opacity 0.3s ease;
  }

  h1:hover, h2:hover, p:hover {
    transform: scale(1.05);
    opacity: 0.9;
  }

  /* Ensure the cursor remains default */
  button, h1, h2, p, span, div {
    cursor: default;
  }
</style>