---
import '../styles/global.css';
---

<nav 
  class="w-full p-5 mt-5 relative z-50"
  :style="selectedTeam ? `background-color: ${teamColors[selectedTeam].DEFAULT};` : 'background-color: var(--custom-white);'"
  x-data="{ isDropdownOpen: false }"
  x-init="selectedTeam = null; teamColors = {
    warriors: { DEFAULT: '#1D428A', secondary: '#FFC72C' },
    'mclaren-2024': { DEFAULT: '#FF8700', secondary: '#000000' },
    'malboro-mclaren': { DEFAULT: '#FF0000', secondary: '#FFFFFF' },
    'hakkinen-mclaren': { DEFAULT: '#C0C0C0', secondary: '#000000', accent: '#000000' }
  }"
  x-on:team-selected.window="selectedTeam = $event.detail.team"
>
  <div class="container mx-auto flex items-center justify-between">
    <!-- Logo -->
    <div class="text-2xl font-playfair font-bold">
      <a href="/" class="block">
        <img 
          src="/src/assets/Images/myLogo.png" 
          alt="logo" 
          class="w-[150px] h-auto transition-all duration-300 hover:scale-105"
        />
      </a>
    </div>

    <!-- Navigation Links -->
    <div class="flex items-center gap-8">
      <a 
        href="#" 
        class="text-xl font-montserrat hover:text-custom-gold transition-all duration-300 relative group"
        :style="selectedTeam ? `color: ${teamColors[selectedTeam].secondary};` : 'color: var(--custom-black);'"
      >
        Home
        <span class="absolute bottom-0 left-0 w-0 h-[2px] bg-custom-gold transition-all duration-300 group-hover:w-full"></span>
      </a>
      <a 
        href="#" 
        class="text-xl font-montserrat hover:text-custom-gold transition-all duration-300 relative group"
        :style="selectedTeam ? `color: ${teamColors[selectedTeam].secondary};` : 'color: var(--custom-black);'"
      >
        About Me
        <span class="absolute bottom-0 left-0 w-0 h-[2px] bg-custom-gold transition-all duration-300 group-hover:w-full"></span>
      </a>
      <a 
        href="#" 
        class="text-xl font-montserrat hover:text-custom-gold transition-all duration-300 relative group"
        :style="selectedTeam ? `color: ${teamColors[selectedTeam].secondary};` : 'color: var(--custom-black);'"
      >
        My Work
        <span class="absolute bottom-0 left-0 w-0 h-[2px] bg-custom-gold transition-all duration-300 group-hover:w-full"></span>
      </a>
    </div>

    <!-- Teams Dropdown Button -->
    <div class="relative">
      <button 
        class="text-xl font-montserrat px-6 py-2 rounded-lg hover:bg-custom-pink transition-colors"
        :style="selectedTeam ? `background-color: ${teamColors[selectedTeam].secondary}; color: ${teamColors[selectedTeam].DEFAULT};` : 'background-color: var(--custom-gold); color: var(--custom-black);'"
        @click="isDropdownOpen = !isDropdownOpen"
      >
        Teams!
      </button>

      <!-- Dropdown Menu -->
      <div 
        class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg transition-all duration-300 z-50"
        x-show="isDropdownOpen"
        x-transition:enter="transition ease-out duration-200"
        x-transition:enter-start="opacity-0 scale-95"
        x-transition:enter-end="opacity-100 scale-100"
        x-transition:leave="transition ease-in duration-150"
        x-transition:leave-start="opacity-100 scale-100"
        x-transition:leave-end="opacity-0 scale-95"
        @click.away="isDropdownOpen = false"
        style="display: none;"
      >
        <div class="py-2">
          <button 
            class="w-full text-left px-4 py-2 text-custom-black hover:bg-custom-pink/50"
            @click="$dispatch('team-selected', { team: 'warriors' }); isDropdownOpen = false;"
          >
            GSW
          </button>
          <button 
            class="w-full text-left px-4 py-2 text-custom-black hover:bg-custom-pink/50"
            @click="$dispatch('team-selected', { team: 'mclaren-2024' }); isDropdownOpen = false;"
          >
            MCL24
          </button>
          <button 
            class="w-full text-left px-4 py-2 text-custom-black hover:bg-custom-pink/50"
            @click="$dispatch('team-selected', { team: 'malboro-mclaren' }); isDropdownOpen = false;"
          >
            MCLSenna
          </button>
          <button 
            class="w-full text-left px-4 py-2 text-custom-black hover:bg-custom-pink/50"
            @click="$dispatch('team-selected', { team: 'hakkinen-mclaren' }); isDropdownOpen = false;"
          >
            MCL Hakkinen
          </button>
          <button 
            class="w-full text-left px-4 py-2 text-custom-black hover:bg-custom-pink/50"
            @click="$dispatch('team-selected', { team: null }); isDropdownOpen = false;"
          >
            Default
          </button>
        </div>
      </div>
    </div>
  </div>
</nav>

<!-- Include Alpine.js -->
<script src="//unpkg.com/alpinejs" defer></script>