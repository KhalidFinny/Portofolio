---
import "../styles/global.css";
---
<script src="//unpkg.com/alpinejs" defer></script>

<!-- Hero Section -->
<main 
  id="home"
  class="min-h-screen w-full mt-10 bg-[#F5F5F5] relative overflow-hidden pt-16 md:pt-20"
  x-data="{
    hover: false, 
    loaded: false, 
    selectedTeam: null,
    teamColors: {
      warriors: { base: '#1D428A', accent: '#FFC72C' },
      'mclaren-2024': { base: '#FF8700', accent: '#000000' },
      'malboro-mclaren': { base: '#FF0000', accent: '#FFFFFF' },
      'hakkinen-mclaren': { base: '#C0C0C0', accent: '#000000' }
    },
    teamImages: {
      warriors: '/Images/Splashbros.webp',
      'mclaren-2024': '/Images/mcl24.webp',
      'malboro-mclaren': '/Images/Marlboro.webp',
      'hakkinen-mclaren': '/Images/mikapic.webp'
    }
  }"
  :style="selectedTeam ? `background-color: ${teamColors[selectedTeam].base}` : ''"
  x-init="
    setTimeout(() => loaded = true, 100);
    window.addEventListener('team-selected', (event) => {
      selectedTeam = event.detail.team;
    });
  "
>
  <div class="w-full h-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex flex-col justify-center">
    <!-- Title Section -->
    <h1 
      class="font-fairplay text-3xl sm:text-4xl md:text-6xl lg:text-7xl xl:text-8xl text-[#2E2E2E] font-bold text-center mb-6 md:mb-12 leading-tight opacity-0 translate-y-8 animate-initial transition-all duration-1000"
      :class="{ 'animate-in': loaded }"
      :style="selectedTeam ? `color: ${teamColors[selectedTeam].accent}` : ''"
    >
      Muhammad Khalid Atthoriq
    </h1>

    <!-- Main Content Section -->
    <div class="grid grid-cols-1 md:grid-cols-3 cursor-default gap-6 md:gap-12 items-center mt-2 md:mt-8">
      <!-- Left Content - Specialties -->
      <div 
        class="text-center md:text-right self-center space-y-3 md:space-y-6 md:pr-8 opacity-0 -translate-x-8 animate-initial transition-all duration-1000 delay-300 order-2 md:order-1"
        :class="{ 'animate-in': loaded }"
      >
        <h2 
          class="font-montserrat text-xl md:text-3xl text-[#2E2E2E] mb-3 md:mb-8 flex items-center justify-center md:justify-end"
          :style="selectedTeam ? `color: ${teamColors[selectedTeam].accent}` : ''"
        >
          Specialties
          <span 
            class="w-4 md:w-8 h-[2px] bg-[#D4C48F] ml-3"
            :style="selectedTeam ? `background-color: ${teamColors[selectedTeam].secondary}` : ''"
          ></span>
        </h2>
        <!-- Specialties content -->
        <div 
          class="space-y-2 md:space-y-6"
          x-data="{ specialties: ['Front-End Developer', 'UI/UX Designer', 'Videographer', 'Photographer'] }"
        >
          <template x-for="(specialty, index) in specialties" :key="index">
            <div 
              class="font-montserrat text-base md:text-xl text-[#2E2E2E] hover:text-[#D4C48F] transition-all duration-300"
              :style="selectedTeam ? `color: ${teamColors[selectedTeam].accent}` : ''"
              x-text="specialty"
            ></div>
          </template>
        </div>
      </div>

      <!-- Center Image -->
      <div 
        class="relative w-full max-w-[200px] sm:max-w-[250px] md:max-w-[350px] aspect-square mx-auto opacity-0 scale-95 animate-initial transition-all duration-1000 delay-200 mt-0 md:-mt-12 order-1 md:order-2"
        :class="{ 'animate-in': loaded }"
        @mouseenter="hover = true"
        @mouseleave="hover = false"
      >
        <!-- Background Circle -->
        <div 
          class="absolute inset-0 rounded-full transition-transform duration-500"
          :class="{ 'scale-105': hover }"
          :style="selectedTeam ? `background-color: ${teamColors[selectedTeam].accent}` : 'background-color: #D4C48F20;'"
        ></div>
        
        <!-- Image with lazy loading -->
        <img
          :src="selectedTeam ? teamImages[selectedTeam] : '/Images/khalid-mainimage.webp'"
          alt="Profile Image"
          loading="lazy"
          class="w-full h-full object-cover rounded-full relative transition-all duration-500"
          :class="{ 'scale-105': hover }"
        />
      </div>

      <!-- Right Content - Experience -->
      <div 
        class="text-center md:text-left self-center space-y-3 md:space-y-6 md:pl-8 opacity-0 translate-x-8 animate-initial transition-all duration-1000 delay-300 order-3"
        :class="{ 'animate-in': loaded }"
      >
        <h2 
          class="font-montserrat text-2xl md:text-3xl text-[#2E2E2E] mb-4 md:mb-8 flex items-center justify-center md:justify-start"
          :style="selectedTeam ? `color: ${teamColors[selectedTeam].accent}` : ''"
        >
          <span 
            class="w-6 md:w-8 h-[2px] bg-[#D4C48F] mr-3"
            :style="selectedTeam ? `background-color: ${teamColors[selectedTeam].secondary}` : ''"
          ></span>
          Experience
        </h2>
        <!-- Experience content -->
        <div class="space-y-3 md:space-y-6">
          <div 
            class="font-montserrat text-lg md:text-xl text-[#2E2E2E]"
            :style="selectedTeam ? `color: ${teamColors[selectedTeam].accent}` : ''"
          >
            Creative Team Leader
          </div>
          <div 
            class="font-montserrat text-lg md:text-xl text-[#2E2E2E]"
            :style="selectedTeam ? `color: ${teamColors[selectedTeam].accent}` : ''"
          >
            Workshop Riset Informatika
          </div>
          <div 
            class="font-montserrat text-base md:text-lg text-[#D4C48F]"
            :style="selectedTeam ? `color: ${teamColors[selectedTeam].accent}` : ''"
          >
            2024-now
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<style>
  .animate-initial {
    opacity: 0;
  }
  
  .animate-in {
    opacity: 1 !important;
    transform: translate(0) scale(1) !important;
  }

  @media (max-width: 768px) {
    .animate-in {
      transform: translate(0) scale(1) !important;
    }
  }

  @media (max-width: 480px) {
    main {
      padding-top: 6rem;
    }
  }

  @media (max-width: 200px) {
    main {
      padding-top: 4rem;
    }
  }
</style>