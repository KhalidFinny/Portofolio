---
import '../styles/global.css';
---

<section 
  class="w-full min-h-screen bg-custom-white px-[329px] pt-[50px] flex flex-col items-center"
  x-data="{ isVisible: false }"
  x-init="setTimeout(() => isVisible = true, 100)"
>
  <!-- Name -->
  <div 
    class="text-center text-custom-black text-[80px] font-playfair font-bold mb-[70px] transition-all duration-1000 ease-out group"
    :class="isVisible ? 'opacity-100 translate-y-0' : 'opacity-0 -translate-y-10'"
    x-on:mouseenter="$el.classList.add('scale-105')"
    x-on:mouseleave="$el.classList.remove('scale-105')"
  >
    Muhammad Khalid Atthoriq
  </div>

  <!-- Content Container -->
  <div class="w-full flex items-start justify-center gap-[100px]">
    <!-- Specialties on the left -->
    <div 
      class="text-custom-black text-[26px] font-montserrat font-medium flex flex-col space-y-4 transition-all duration-1000 ease-out delay-200"
      :class="isVisible ? 'opacity-100 translate-x-0' : 'opacity-0 -translate-x-10'"
    >
      <div 
        class="whitespace-nowrap transition-all duration-300 hover:scale-105 hover:text-custom-gold"
        x-on:mouseenter="$el.classList.add('scale-105', 'text-custom-gold')"
        x-on:mouseleave="$el.classList.remove('scale-105', 'text-custom-gold')"
      >
        Front-End Developer
      </div>
      <div 
        class="whitespace-nowrap transition-all duration-300 hover:scale-105 hover:text-custom-gold"
        x-on:mouseenter="$el.classList.add('scale-105', 'text-custom-gold')"
        x-on:mouseleave="$el.classList.remove('scale-105', 'text-custom-gold')"
      >
        UI/UX Designer
      </div>
      <div 
        class="whitespace-nowrap transition-all duration-300 hover:scale-105 hover:text-custom-gold"
        x-on:mouseenter="$el.classList.add('scale-105', 'text-custom-gold')"
        x-on:mouseleave="$el.classList.remove('scale-105', 'text-custom-gold')"
      >
        Videographer
      </div>
      <div 
        class="whitespace-nowrap transition-all duration-300 hover:scale-105 hover:text-custom-gold"
        x-on:mouseenter="$el.classList.add('scale-105', 'text-custom-gold')"
        x-on:mouseleave="$el.classList.remove('scale-105', 'text-custom-gold')"
      >
        Photographer
      </div>
    </div>

    <!-- Circular Background and Image -->
    <div 
      class="relative flex items-center justify-center transition-all duration-1000 ease-out delay-400 group -ml-[50px]"
      :class="isVisible ? 'opacity-100 scale-100' : 'opacity-0 scale-90'"
      x-on:mouseenter="$el.classList.add('scale-105')"
      x-on:mouseleave="$el.classList.remove('scale-105')"
    >
      <div class="w-[800px] h-[800px] bg-custom-gold rounded-full transition-all duration-300 group-hover:scale-105"></div>
      <img
        src="/src/assets/Images/khalid-mainimage.png"
        alt="Profile Image"
        class="w-[700px] h-auto absolute -top-12 rounded-lg transition-all duration-1000 ease-out delay-600 group-hover:scale-105"
        :class="isVisible ? 'opacity-100 scale-100' : 'opacity-0 scale-90'"
      />
    </div>

    <!-- Button on the right -->
    <div 
      class="flex items-center transition-all duration-1000 ease-out delay-800"
      :class="isVisible ? 'opacity-100 translate-x-0' : 'opacity-0 translate-x-10'"
    >
      <button 
        class="bg-custom-pink/50 text-custom-black text-[24px] font-montserrat font-semibold px-8 py-3 rounded-lg hover:shadow-xl hover:scale-105 transition-all duration-300"
        x-on:mouseenter="$el.classList.add('rotate-2', 'shadow-lg')"
        x-on:mouseleave="$el.classList.remove('rotate-2', 'shadow-lg')"
      >
        XPLORE!
      </button>
    </div>
  </div>
</section>

<!-- Include Alpine.js -->
<script src="//unpkg.com/alpinejs" defer></script>