---
import "../styles/global.css";
import Navbar from "./Navbar.astro";
const { selectedTeam, teamColors } = Astro.props;
---

<script src="//unpkg.com/alpinejs" defer></script>

<!-- Navbar -->
<Navbar />

<!-- Hero Section -->
<main 
  id="home"
  class="h-screen w-full bg-[#F5F5F5] relative overflow-hidden"
  x-data="{ hover: false }"
  :style="selectedTeam ? `background-color: ${teamColors[selectedTeam].base}` : ''"
>
  <!-- Background Elements -->
  <div class="absolute inset-0">
    <div 
      class="absolute w-96 h-96 rounded-full border border-[#D4C48F] opacity-10 -top-20 -left-20"
      :style="selectedTeam ? `border-color: ${teamColors[selectedTeam].secondary}` : ''"
    ></div>
    <div 
      class="absolute w-72 h-72 rounded-full border border-[#E1C6CC] opacity-10 -bottom-10 -right-10"
      :style="selectedTeam ? `border-color: ${teamColors[selectedTeam].secondary}` : ''"
    ></div>
  </div>

  <div class="w-full h-full max-w-8xl mx-auto px-8 md:px-16 flex flex-col justify-center">
    <!-- Title Section -->
    <h1 
      class="font-fairplay text-6xl md:text-7xl lg:text-8xl text-[#2E2E2E] font-bold text-center mb-12 leading-tight"
      :style="selectedTeam ? `color: ${teamColors[selectedTeam].accent}` : ''"
    >
      Muhammad Khalid Atthoriq
    </h1>

    <!-- Main Content Section -->
    <div class="grid grid-cols-3 gap-12 items-start mt-8">
      <!-- Left Content - Specialties -->
      <div class="text-right self-center space-y-6 pr-8">
        <h2 
          class="font-montserrat text-3xl text-[#2E2E2E] mb-8 flex items-center justify-end"
          :style="selectedTeam ? `color: ${teamColors[selectedTeam].accent}` : ''"
        >
          Specialties
          <span 
            class="w-8 h-[2px] bg-[#D4C48F] ml-3"
            :style="selectedTeam ? `background-color: ${teamColors[selectedTeam].secondary}` : ''"
          ></span>
        </h2>
        <div 
          class="font-montserrat text-xl text-[#2E2E2E] hover:text-[#D4C48F] transition-colors duration-300"
          :style="selectedTeam ? `color: ${teamColors[selectedTeam].accent}` : ''"
        >
          Front-End Developer
        </div>
        <div 
          class="font-montserrat text-xl text-[#2E2E2E] hover:text-[#D4C48F] transition-colors duration-300"
          :style="selectedTeam ? `color: ${teamColors[selectedTeam].accent}` : ''"
        >
          UI/UX Designer
        </div>
        <div 
          class="font-montserrat text-xl text-[#2E2E2E] hover:text-[#D4C48F] transition-colors duration-300"
          :style="selectedTeam ? `color: ${teamColors[selectedTeam].accent}` : ''"
        >
          Videographer
        </div>
        <div 
          class="font-montserrat text-xl text-[#2E2E2E] hover:text-[#D4C48F] transition-colors duration-300"
          :style="selectedTeam ? `color: ${teamColors[selectedTeam].accent}` : ''"
        >
          Photographer
        </div>
      </div>

      <!-- Center Image -->
      <div 
        class="relative w-full aspect-square max-w-3xl mx-auto -mt-12"
        @mouseenter="hover = true"
        @mouseleave="hover = false"
      >
        <!-- Background Circle -->
        <div 
          class="absolute inset-0 rounded-full transition-transform duration-500"
          :class="{ 'scale-105': hover }"
          :style="selectedTeam ? `background-color: ${teamColors[selectedTeam].accent}20` : 'background-color: #D4C48F20;'"
        ></div>
        
        <!-- Image -->
        <img
          src="/src/assets/Images/khalid-mainimage.webp"
          alt="Profile Image"
          class="w-full h-full object-cover rounded-full relative transition-transform duration-500"
          :class="{ 'scale-105': hover }"
        />
      </div>

      <!-- Right Content - Experience -->
      <div class="text-left self-center space-y-8 pl-8">
        <h2 
          class="font-montserrat text-3xl text-[#2E2E2E] mb-8 flex items-center"
          :style="selectedTeam ? `color: ${teamColors[selectedTeam].accent}` : ''"
        >
          <span 
            class="w-8 h-[2px] bg-[#D4C48F] mr-3"
            :style="selectedTeam ? `background-color: ${teamColors[selectedTeam].secondary}` : ''"
          ></span>
          Experience
        </h2>
        <div class="space-y-4">
          <p 
            class="font-montserrat text-xl text-[#2E2E2E] font-medium"
            :style="selectedTeam ? `color: ${teamColors[selectedTeam].accent}` : ''"
          >
            Creative Team Leader
          </p>
          <p 
            class="font-montserrat text-lg text-[#2E2E2E]/80"
            :style="selectedTeam ? `color: ${teamColors[selectedTeam].accent}` : ''"
          >
            Workshop Rist Informatika
          </p>
          <p 
            class="font-montserrat text-base text-[#D4C48F] font-bold"
            :style="selectedTeam ? `color: ${teamColors[selectedTeam].accent}` : ''"
          >
            2024-2025
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Decorative Bottom Element -->
  <div class="absolute bottom-8 left-8 flex items-center space-x-3">
    <div 
      class="w-12 h-[1px] bg-[#D4C48F]"
      :style="selectedTeam ? `background-color: ${teamColors[selectedTeam].secondary}` : ''"
    ></div>
    <span 
      class="font-montserrat text-sm text-[#2E2E2E]/60"
      :style="selectedTeam ? `color: ${teamColors[selectedTeam].accent}` : ''"
    >
      Portfolio 2024
    </span>
  </div>
  <section>

  </section>
</main>