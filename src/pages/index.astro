---
import Hero from '../components/Hero.astro';
import '../styles/global.css';
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>My Portfolio</title>
  </head>
  <body class="bg-custom-white" x-data="{ selectedTeam: null }" x-on:team-selected.window="selectedTeam = $event.detail.team" :style="selectedTeam ? `background-color: ${teamColors[selectedTeam].DEFAULT};` : 'background-color: var(--custom-white);'">
    <main>
      <div>
        <Hero />
      </div>
    </main>
    </script>
  </body>
</html>