---
import Navbar from '../components/Navbar.astro';
import Hero from '../components/Hero.astro';
import '../styles/global.css';
import Aboutme from '../components/aboutme.astro';
import Work from '../components/work.astro';

// Define the teamColors object
const teamColors = {
  warriors: { base: '#1D428A', accent: '#FFC72C', logo: '/src/assets/Images/Currylogo.webp' },
  'mclaren-2024': { base: '#FF8700', accent: '#000000', logo: '/src/assets/Images/Landologo.webp' },
  'malboro-mclaren': { base: '#FF0000', accent: '#FFFFFF', logo: '/src/assets/Images/Sennalogo.webp' },
  'hakkinen-mclaren': { base: '#C0C0C0', accent: '#000000', logo: '/src/assets/Images/Mikalogo.webp' }
};
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>My Portfolio</title>
    <style>
      html {
        scroll-behavior: smooth;
      }
    </style>
  </head>
  <body 
    class="bg-custom-white" 
    x-data="{ selectedTeam: null, teamColors: { 
      warriors: { base: '#1D428A', accent: '#FFC72C', logo: '/src/assets/Images/Currylogo.webp' },
      'mclaren-2024': { base: '#FF8700', accent: '#000000', logo: '/src/assets/Images/Landologo.webp' },
      'malboro-mclaren': { base: '#FF0000', accent: '#FFFFFF', logo: '/src/assets/Images/Sennalogo.webp' },
      'hakkinen-mclaren': { base: '#C0C0C0', accent: '#000000', logo: '/src/assets/Images/Mikalogo.webp' }
    }}" 
    x-on:team-selected.window="selectedTeam = $event.detail.team" 
    :style="selectedTeam ? `background-color: ${teamColors[selectedTeam].base};` : 'background-color: var(--custom-white);'"
  >
    <main>
      <Navbar selectedTeam="{selectedTeam}" teamColors="{teamColors}" />
      <div id="home">
        <!-- Pass selectedTeam and teamColors to Hero -->
        <Hero selectedTeam="{selectedTeam}" teamColors="{teamColors}" />
      </div>
      <section id="aboutme">
        <Aboutme selectedTeam="{selectedTeam}" teamColors="{teamColors}" />
      </section>
      <section id="work">
        <Work selectedTeam="{selectedTeam}" teamColors="{teamColors}" />
      </section>
    </main>
  </body>
</html>