---
import Video from '../components/video.astro';
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';
import Main from '../layout/main.astro';
---
<Main tittle="Videography" description="My Videography">
    <style>
      html {
        scroll-behavior: smooth;
      }
      
      /* Responsive adjustments */
      @media (max-width: 768px) {
        body {
          font-size: 14px;
        }
        .container {
          padding-left: 1rem;
          padding-right: 1rem;
        }
        .card-container {
          grid-template-columns: 1fr;
        }
      }
      
      @media (max-width: 480px) {
        body {
          font-size: 12px;
        }
      }
      
      @media (max-width: 200px) {
        body {
          font-size: 10px;
        }
        .container {
          padding-left: 0.5rem;
          padding-right: 0.5rem;
        }
      }
    </style>
  </head>
  <body>
    <main>
      <div>
        <Navbar selectedTeam="{selectedTeam}" teamColors="{teamColors}" />
      </div>
      <div>
        <Video selectedTeam="{selectedTeam}" teamColors="{teamColors}" />
      </div>
  </body>
</html>
</Main>